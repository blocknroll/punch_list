<h2>Create a New Task</h2>

<%= form_for(@task, url: list_tasks_path, method: :post, role: "form") do |f| %>

<%= f.label :title %>
<%= f.text_field :title, class: "form-control" %><br>

<%= f.label :notes %>
<%= f.text_field :notes, class: "form-control" %><br>

<%= f.label :start_date %>
<%= f.date_field :start_date, class: "form-control" %><br>

<%= f.label :due_date %>
<%= f.date_field :due_date, class: "form-control" %><br>

<%= f.submit "Submit"%>

<% end %>
